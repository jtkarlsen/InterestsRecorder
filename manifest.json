{
	"manifest_version": 2,
	"name": "InterestRecorder",
	"version": "1.3",
	"description": "Records interests by monitoring link clicks.",
	"permissions": [
		"storage",
        "http://129.242.219.56:5000/",
        "http://129.242.219.56/"
	],
	"content_scripts": 
	[
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_end"
		}
	],
	"background": {
		"scripts": ["eventPage.js"],
		"persistent": false
	},
	"browser_action": {
		"default_icon": "eye106.png",
		"default_popup": "popup.html"
	}
}